  <%= render partial: "layouts/sidebar"  %>
  <main>
    <h1>Transações</h1>
    <table>
      <thead>
        <tr>
          <th>Data Transação</th>
          <th>Tipo</th>
          <th>Valor</th>
          <th>Documento</th>
          <th>Cartão</th>
          <th>Loja</th>
        </tr>
      </thead>
      <tbody>
        <% @transactions.each do |transaction| %>
        <tr class="transaction">
          <td>
            <%= transaction.processed_at.strftime("%d/%m/%y - %H:%M:%S") %>
          </td>
          <td>
            <%= transaction.kind_description %> - <%= transaction.kind_text %>
          </td>
          <td>
            <%= number_to_currency(transaction.amount/100.0, unit: "R$ ", separator: ",", delimiter: ".") %>
          </td>
          <td>
            <%= transaction.document %>
          </td>
          <td>
            <%= transaction.card %>
          </td>
          <td>
            <%= transaction.store.name %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </main>
</div>